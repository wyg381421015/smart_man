<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".activity.ControlActivity"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_border"
            android:padding="16dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本体状态信息"
                android:textColor="#ADD8E6"
                android:textSize="40sp"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_background"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="通信状态"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_background"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="定位状态"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_background"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="行走速度"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/com_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正 常"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/nav_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正 常"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1m/s"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:minWidth="120dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_background"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="底盘电量"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_background"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="故障信息"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circle_background"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他信息"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/base_soc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/alarm_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无故障"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:minWidth="120dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/other_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-%"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">
<!--            <ImageView-->
<!--                android:layout_width="180dp"-->
<!--                android:layout_height="180dp"-->
<!--                android:src="@mipmap/ic_logo"/>-->
            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/emergencyStop"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_stop_normal"
                android:layout_marginHorizontal="180dp"
                android:layout_marginVertical="55dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_border"
            android:padding="16dp"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络配置"
                android:textColor="#ADD8E6"
                android:textSize="40sp"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="底盘IP："
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/under_ip"
                        android:hint="192.168.1.125"
                        android:textColorHint="#888888"
                        android:textSize="25sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="5dp"
                        android:background="@drawable/edit_text_background"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本体IP："
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center" />

                    <EditText
                        android:id="@+id/web_ip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:gravity="center"
                        android:hint="192.168.1.183"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textColorHint="#888888"
                        android:textSize="25sp" />
                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:layout_marginTop="10dp">-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:text="本体port："-->
<!--                        android:textColor="#FFFFFF"-->
<!--                        android:textSize="25sp" />-->
<!--                    <EditText-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:id="@+id/web_port"-->
<!--                        android:hint="5000"-->
<!--                        android:textColorHint="#888888"-->
<!--                        android:textSize="25sp"-->
<!--                        android:textColor="#000000"-->
<!--                        android:background="@drawable/edit_text_background"-->
<!--                        android:gravity="center"-->
<!--                        android:padding="5dp" />-->
<!--                </LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="40dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/connect"
                    android:text="连  接"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/disconnect"
                    android:text="断  开"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_border"
            android:padding="16dp"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.6">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自主作业"
                    android:textColor="#ADD8E6"
                    android:textSize="40sp"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="20dp">
                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/execButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="执行"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="right"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
                <Space
                    android:layout_width="200dp"
                    android:layout_height="90dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recordButton"
                        android:text="录点"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:background="@drawable/button_background"/>
                    <Space
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clearRecordButton"
                        android:text="清除"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:background="@drawable/button_background"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:layout_weight="0.8">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="本体控制"
                    android:textColor="#ADD8E6"
                    android:textSize="40sp"
                    android:gravity="center" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp">
                    <Button
                        android:id="@+id/wave_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="挥 手"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="clip_horizontal"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="15dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/come_button"
                        android:text="请 进"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="25dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/look_button"
                        android:text="请 看"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="25dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/handshakeButton"
                        android:text="握 手"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="25dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="5dp">
                        <Button
                            android:id="@+id/selfButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="自 己"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="clip_horizontal"
                            android:background="@drawable/button_background"
                            android:layout_marginTop="15dp"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/showButton"
                            android:text="展 示"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_background"
                            android:layout_marginTop="25dp"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/introButton"
                            android:text="介 绍"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_background"
                            android:layout_marginTop="25dp"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/handdownButton"
                            android:text="放 下"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_background"
                            android:layout_marginTop="25dp"/>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/requestButton"
                        android:text="请 求"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="clip_horizontal"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="15dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/speakButton"
                        android:text="说 话"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="25dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/listenButton"
                        android:text="倾 听"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="25dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pauseButton"
                        android:text="暂 停"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="25dp"/>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="0.7">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="50dp">

                    <RadioGroup
                        android:id="@+id/radioselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">
                        <RadioButton
                            android:id="@+id/radioButtonAuto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自动"
                            android:textSize="30dp"
                            android:layout_marginLeft="10dp"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/radioButtonManual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手动"
                            android:textSize="30dp"
                            android:layout_marginLeft="30dp" />
                    </RadioGroup>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/backimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:visibility="visible"
                        android:src="@mipmap/ui_pic_joystick_control_ball" />

                    <ImageView
                        android:id="@+id/upimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:rotation="90"
                        android:src="@mipmap/ui_pic_joystick_arrow"
                        android:visibility="invisible" />
                </RelativeLayout>

                <!--                <ImageView-->
                <!--                android:layout_width="240dp"-->
                <!--                android:layout_height="240dp"-->
                <!--                android:background="@mipmap/ui_pic_joystick_control_ball"-->
                <!--                android:src="@mipmap/ui_pic_joystick_arrow"-->
                <!--                android:layout_gravity="center"/>-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
