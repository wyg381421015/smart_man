<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0056b3" />
            <corners android:radius="10dp" />
            <padding
                android:left="8dp"
            android:right="8dp"
            android:top="8dp"
            android:bottom="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#007BFF" />
            <corners android:radius="10dp" /> <!-- 同样可调整 -->
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</selector>